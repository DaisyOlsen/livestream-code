{
	"version": 2,
	"$schema": "https://schemas.wp.org/trunk/theme.json",
	"templateParts": [
		{
			"area": "header",
			"name": "simple-header-with-tagline",
			"title": "Header"
		},
		{
			"area": "footer",
			"name": "right-aligned-footer",
			"title": "Footer"
		}
	],
	"settings": {
		"appearanceTools": true,
		"color": {
			"custom": true,
			"customDuotone": true,
			"customGradient": true,
			"defaultDuotone": true,
			"defaultGradients": true,
			"defaultPalette": true,
			"background": true,
			"link": false,
			"text": false	
		},
		"border": {
			"color": false,
			"radius": false,
			"style": false,
			"width": false
		},
		"spacing": {
			"margin": false,
			"padding": false
		},
			"shadow": {
				"palette": [
					{
						"name": "Natural",
						"slug": "theme-natural",
						"shadow": "5px 5px 0px -2px #FFFFFF, 5px 5px #000000"
					},
					{
						"name": "Crisp",
						"slug": "theme-crisp",
						"shadow": "5px 5px #000000"
					},
					{
						"name": "Sharp",
						"slug": "theme-sharp",
						"shadow": "5px 5px 0 0 #999999"
					},
					{
						"name": "Soft",
						"slug": "theme-soft",
						"shadow": "5px 5px 10px 0 #999999"
					}
				]
			}
	},
		"styles": {
			 "elements": {
				  "button": {
					  "shadow": "var(--wp--preset--shadow--natural)"
				  }
			 }
		}
}